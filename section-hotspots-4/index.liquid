<script>
  function initHotspots4() {
      if (document.querySelectorAll('.hotspots-circle-template--20940255002953__ss_hotspots_4_wNxrK8')) {
          let circles = document.querySelectorAll('.hotspots-circle-template--20940255002953__ss_hotspots_4_wNxrK8');
          let texts = document.querySelectorAll('.hotspots-item-template--20940255002953__ss_hotspots_4_wNxrK8');

          circles.forEach(el => {
              el.addEventListener('click', () => {
                  let dataId = el.getAttribute('data-id');

                  circles.forEach(element => {
                      let dataElementId = element.getAttribute('data-id');

                      if (dataId != dataElementId) {
                          element.classList.remove('active');
                      } else {
                          element.classList.add('active');
                      }
                  })

                  if (texts) {
                      texts.forEach(element => {

                          if (element.id != dataId) {
                              element.classList.remove('active');
                          } else {
                              element.classList.add('active');
                          }

                      })
                  }
              })
          })
      }
  }

  document.addEventListener('DOMContentLoaded', initHotspots4);
</script>

