</style>

<section class="ban-hero-section">
  <div class="swiper ban-hero-slider">
    <div class="swiper-wrapper">
      {% for slide in section.blocks %}
        <div class="swiper-slide">
          {% if slide.settings.image != blank %}
            <img
              src="{{ slide.settings.image | img_url:'master'}}"
              class="ban-slide-image"
              alt="{{ slide.settings.heading }}"
            >
          {% else %}
            <div class="ban-slide-image">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder_svg' }}
            </div>
          {% endif %}
          <div class="ban-content-wrapper">
            <div class="ban-slide-content">
              <h1 class="ban-slide-title">
                {{ slide.settings.heading }}
              </h1>
              <p class="ban-slide-subtitle">{{ slide.settings.description }}</p>
              {% if slide.settings.btn_text != blank %}
                <a href="{{ slide.settings.btn_link }}" class="ban-cta-button">
                  {{ slide.settings.btn_text }}
                  <svg
                    class="arrow"
                    width="{{btn_icon_width}}"
                    height="{{btn_icon_height}}"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
      <!-- Additional slides here -->
    </div>

    <div class="nav-buttons">
      <button class="nav-button nav-prev">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
      </button>
      <button class="nav-button nav-next">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
        </svg>
      </button>
    </div>
    <div class="swiper-pagination"></div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.js"></script>
<script>
   new Swiper('.ban-hero-slider', {
      slidesPerView: 1,
      speed: 1000,
      loop: true,
      autoplay: {
          delay: 5000,
          disableOnInteraction: false,
      },
      navigation: {
          prevEl: '.nav-prev',
          nextEl: '.nav-next',
      },
      pagination: {
          el: '.swiper-pagination',
          clickable: true,
      },
  });
</script>
