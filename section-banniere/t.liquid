<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.5/swiper-bundle.min.css">
<style>
       .ban-hero-section {
        position: relative;
        width: {% if section_width %} 100% {% else %} 95% {% endif %};
        height: 80vh;
        margin: 0 auto;
        border-radius: {{section_radius}}px;
        margin-top: {{section_mt}}px;
        margin-bottom: {{section_mb}}px;
        {% if enabled_border %}border: {{section_border_width}}px solid {{section_border_color}};{% endif %}
        background-color: {{section_backg}};
        overflow: hidden;
    }

    .ban-hero-section .ban-hero-slider {
        width: 100%;
        height: 100%;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide {
        position: relative;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-slide-image {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(.8);
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        z-index: 2;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content {
      text-align: {{alignment}};
      padding: 0 20px;
  }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-slide-title {
        font-size: {{heading_size}}px;
        font-weight: {{heading_weight}};
        color: {{heading_color}};
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 1rem;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-slide-subtitle {
        font-size: {{desc_size}}px;
        font-family: 'Rubik', sans-serif;
        margin-bottom: 2rem;
        opacity: 0.9;
        color: {{desc_color}};
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-cta-button {
        display: inline-flex;
        align-items: {{btn_align}};
        padding: 17px 28px;
        background-color: {{btn_backg}};
        color: {{btn_text_color}};
        text-decoration: none;
        text-transform: uppercase;
        font-weight: {{btn_text_weight}};
        letter-spacing: 1px;
        border: {{btn_border_width}}px {{btn_border_type}} {{btn_border_color}};
        border-radius: {{btn_radius}}px;
        font-size: {{btn_text_size}}px;
        transition: all 0.3s ease;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-cta-button:hover {
        background-color: {{btn_backg_hover}};
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-cta-button .arrow {
        margin-left: 5px;
        transform: rotate(-45deg);
        transition: transform 0.3s ease;
    }

    .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-cta-button:hover .arrow {
        transform: rotate(0deg);
    }

    .ban-hero-section .ban-hero-slider .nav-buttons {
        position: absolute;
        top: 45%;
        width: 100%;
        transform: translateY(-50%);
        z-index: 10;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .ban-hero-section:hover .nav-buttons {
        opacity: 1;
        pointer-events: all;
    }

    .ban-hero-section .ban-hero-slider .nav-buttons .nav-button {
        position: absolute;
        width: {{nav_width}}px;
        height: {{nav_height}}px;
        color: {{nav_color}};
        background: {{nav_backg}};
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all .3s ease;
    }

    .ban-hero-section .ban-hero-slider .nav-buttons .nav-prev {
        left: 18px;
    }

    .ban-hero-section .ban-hero-slider .nav-buttons .nav-prev:hover {
        left: 13px;
    }

    .ban-hero-section .ban-hero-slider .nav-buttons .nav-next {
        right: 18px;
    }

    .ban-hero-section .ban-hero-slider .nav-buttons .nav-next:hover {
        right: 13px;
    }

    .ban-hero-section .ban-hero-slider .swiper-pagination {
        position: absolute;
        bottom: 3em !important;
        /* Override la position par défaut */
    }

    /* Variante avec effet de progression */
    .ban-hero-section .ban-hero-slider .swiper-pagination-bullet {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.5);
        opacity: 1;
        /* Override l'opacité par défaut */
        transition: all 0.3s ease;
    }

    /* Style au survol des bullets */
    .ban-hero-section .ban-hero-slider .swiper-pagination-bullet:hover {
        background-color: rgba(255, 255, 255, 0.8);
        transform: scale(1.4);
    }

    /* Style du bullet actif */
    .ban-hero-section .ban-hero-slider .swiper-pagination-bullet-active {
        background-color: #ffffff;
        /* Bullet actif en blanc */
    }

    @media (max-width:750px) {
        .ban-hero-section .ban-hero-slider .swiper-slide .ban-content-wrapper .ban-slide-content .ban-slide-title {
            font-size: 30px;
        }

