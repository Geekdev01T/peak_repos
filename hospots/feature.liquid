<style>
  .section-{{section.id}} {
      background-color:{{section_bg}};
      margin-top: {{section_mt}}px  !important;
      margin-bottom: {{section_mb}}px  !important;
      border: {{section_border_w}}px solid {{section_border_color}};
      {% if full_border %} border-radius: {{section_radius}}px; {% endif %}
      max-width: {% if full_width %} 100% {% else %} 1200px {% endif %};
      margin: 0 auto;
      overflow: hidden;
  }

  .section-{{section.id}}-settings {
      margin: 0 auto;
      padding-top: 45px;
      padding-bottom: 45px;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
  }

  .feature-body-{{section.id}} {
      display: grid;
      grid-template-columns: 1fr;
      gap: 32px;
  }

  .feature-items-{{section.id}} {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: 16px;
  }

  .feature-item-{{section.id}} {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 24px 24px;
      border-radius: {{card_radius}}px;
      overflow: hidden;
      transition: all 0.25s ease 0s;
      text-decoration: none;
      position: relative;
      z-index: 0
  }

  .feature-item-{{section.id}}:hover .feature-item-image-{{section.id}} {
      opacity: 1;
      transition: all 0.25s ease 0s;
  }

  .feature-item-top-{{section.id}} {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
      gap: 15px;
      z-index: 2;
  }

  .feature-item-title-{{section.id}} {
      margin: 0;
      width: 100%;
      font-size: {{card_heading_size_mobile}}px;
      color: {{card_heading_color}};
      line-height: 130%;
      text-transform: unset;
      text-decoration: none;
      word-break: break-word;
      font-weight: {{card_heading_weight}};
  }

  .feature-item-top-{{section.id}} svg {
      flex-shrink: 0;
      width: 28px;
      height: 28px;
  }

  .feature-item-top-{{section.id}} svg path {
      fill: #ffffff;
  }

  .feature-item-text-{{section.id}} {
      margin-top: 32px;
  }

  .feature-item-text-{{section.id}} * {
      margin: 0;
      font-size: {{card_desc_size_mobile}}px;
      color: {{card_desc_color}};
      text-align: {{card_align}};
      line-height: 150%;
      text-transform: unset;
      text-decoration: none;
      word-break: break-word;
  }

  .feature-item-button-{{section.id}} {
      position: relative;
      z-index: 2;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      /* width: 100%; */
      margin-top: 40px;
      font-size: {{btn_size}}px;
      color: {{btn_color}};
      line-height: 100%;
      text-align: center;
      text-transform: unset;
      text-decoration: none;
      padding: 14px 24px;
      border-radius: {{btn_radius}}px;
      transition: all 0.25s ease 0s;
      background-color: transparent;
      border: {{btn_border_w}}px solid {{btn_border_color}};
      cursor: pointer;
      font-weight: {{btn_weight}};
  }

  .feature-item-button-inner-{{section.id}} {
      margin: 0px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
  }

  .feature-item-button-{{section.id}}:hover {
      color: {{btn_color}};
      transition: all 0.25s ease 0s;
  }

  .feature-item-button-{{section.id}} svg {
      width: 14px;
      height: 14px;
  }

  .feature-item-button-{{section.id}} svg path {
      fill: {{btn_color}};
      transition: all 0.25s ease 0s;
  }

  .feature-item-button-{{section.id}}:hover svg path {
      fill: {{btn_color}};
      transition: all 0.25s ease 0s;
  }

  .feature-item-image-{{section.id}} {
      position: absolute;
      z-index: 1;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: all 0.25s ease 0s;
  }

  .feature-item-image-{{section.id}}:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-color: rgba(0, 0, 0, 0.2);
  }

  .feature-item-image-{{section.id}} img,
  .feature-item-image-{{section.id}} svg {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  .feature-item-image-{{section.id}} svg {
      background-color: #AFAFAF;
  }

  .feature-content-{{section.id}} {
      order: 1;
  }

  .feature-items-{{section.id}} {
      order: 2;
  }

  .feature-item-button-{{section.id}} {
      background-color: {{btn_bg}};
  }

  .feature-item-button-{{section.id}}:hover {
      transition: all 0.25s ease 0s;
      background-color: {{btn_bg_hover}};
  }

  .feature-subheading-sub_heading * {
      margin: 0;
      font-size: {{sub_heading_size_mobile}}px;
      color: {{sub_heading_color}};
      line-height: 130%;
      text-align: {{section_align}};
      text-transform: unset;
      text-decoration: none;
      word-break: break-word;
      font-weight: {{sub_heading_weight}};
  }

  .feature-heading-heading {
