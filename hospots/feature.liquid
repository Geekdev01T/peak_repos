  }

  .feature-heading-heading * {
      margin: 0;
      font-size: {{heading_size_mobile}}px;
      color: {{heading_color}};
      line-height: 130%;
      text-align: {{section_align}};
      text-transform: unset;
      text-decoration: none;
      word-break: break-word;
      font-weight: {{heading_weight}};
  }

  .feature-text-text {
