  }

  .feature-text-text * {
      margin: 0;
      font-size: {{desc_size_mobile}}px;
      color: {{desc_color}};
      line-height: 150%;
      text-align: {{section_align}};
      text-transform: unset;
      text-decoration: none;
      word-break: break-word;
  }

  .feature-item-feature:hover {
      border: none;
      border-top: {{card_border_w}}px solid {{card_border_color}} !important;
  }


  .feature-item-feature_btn {
      background-color: {{card_bg}};
      border: {{btn_card_border_w}}px solid {{btn_card_border_color}};
  }

  .feature-item-feature_btn:hover {
