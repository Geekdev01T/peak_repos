<div class="section-{{section.id}} feature-{{section.id}}">
  <div class="section-{{section.id}}-settings">
    <div class="feature-body-{{section.id}}">
      <div class="feature-content-{{section.id}}">
        <div class="feature-subheading-sub_heading">
          <p>{{ sub_heading }}</p>
        </div>

        <div class="feature-heading-heading">
          <p>{{ heading }}</p>
        </div>

        <div class="feature-text-text">
          {{ desc_text }}
        </div>
      </div>
      <div class="feature-items-{{section.id}}">
        {% for block in section.blocks %}
          <a
            href="{{ block.settings.link }}"
            class="feature-item-{{section.id}} feature-item-feature"
            style="background-color: {{ block.settings.card_bg }}; {% if block.settings.full_card_border %} border: {{ block.settings.border_w }}px solid {{ block.settings.border_card_color }};{% endif %}"
          >
            <div class="feature-item-top-{{section.id}}">
              <p class="feature-item-title-{{section.id}} feature-item-title-feature">{{ block.settings.title }}</p>

              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="100%"
                height="100%"
                viewBox="0 0 32 32"
                fill="none"
                preserveAspectRatio="xMidYMid meet"
                aria-hidden="true"
                role="img"
              >
                <mask id="mask0_2623_6211" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="32"
                    height="32">
                    <rect width="32" height="32" fill="#D9D9D9"></rect>
                </mask>
                <g mask="url(#mask0_2623_6211)">
                    <path
                        d="M21.5667 17.3334H5.33333V14.6667H21.5667L14.1 7.20004L16 5.33337L26.6667 16L16 26.6667L14.1 24.8L21.5667 17.3334Z"
                        fill="white"></path>
                </g>
              </svg>
            </div>

            <div class="feature-item-text-{{section.id}}">
              {{ block.settings.desc }}
            </div>

            {% if block.settings.image != blank %}
              <div class="feature-item-image-{{section.id}}">
                <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.title }}">
              </div>
            {% else %}
              <div class="feature-item-image-{{section.id}}">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder_svg' }}
              </div>
            {% endif %}
          </a>
        {% endfor %}
        <div class="feature-item-{{section.id}} feature-item-feature_btn">
          <div class="feature-item-top-{{section.id}}">
            <p class="feature-item-title-{{section.id}} feature-item-title-feature">
              {{ card_btn_question }}
            </p>
          </div>

          {% if btn_text != blank %}
            <a href="{{ btn_link }}" class="feature-item-button-{{section.id}}">
              <p class="feature-item-button-inner-{{section.id}}">{{ btn_text }}</p>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

