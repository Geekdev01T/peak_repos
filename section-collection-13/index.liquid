            function loadSwiper(callback) {
                if (window.Swiper) {
                    callback();
                } else {
                    const script = document.createElement('script');
                    script.src = "https://cdn.jsdelivr.net/npm/swiper@6.8.4/swiper-bundle.min.js";
                    script.onload = callback;
                    document.head.appendChild(script);
                }
            }

            function PcInitFeaturedCollection13() {
                const productCountElement = document.querySelector(`.featured-product-count-pc-{{section.id}} span`);

                const PcUpdateSlideCount = (current, total) => {
                    if (productCountElement) {
                        productCountElement.textContent = `${current} / ${total}`;
                    }
                };

                const PcImageSlider = new Swiper(`.featured-image-slider-pc-{{section.id}}`, {
                    speed: 800,
                    loop: true,
                    slidesPerView: 1,
                    spaceBetween: 0,
                    pagination: {
                        el: `.featured-pagination-pc-{{section.id}}`,
                        type: "bullets",
                        clickable: true,
                    },
                });

                const PcProductSlider = new Swiper(`.featured-product-slider-pc-{{section.id}}`, {
                    speed: 800,
                    loop: true,
                    slidesPerView: 1,
                    spaceBetween: 0,
                    navigation: {
                        nextEl: `.featured-btn-next-pc-{{section.id}}`,
                        prevEl: `.featured-btn-prev-pc-{{section.id}}`,
                    },
                });

                const totalSlides = PcImageSlider.slides.length;

                PcImageSlider.on('slideChange', () => {
                    const currentIndex = PcImageSlider.realIndex + 1;
                    PcIcUpdateSlideCount(currentIndex, totalSlides);

                    PcProductSlider.slideToLoop(PcImageSlider.realIndex);
                });

                PcProductSlider.on('slideChange', () => {
                    const currentIndex = PcProductSlider.realIndex + 1;
                    PcUpdateSlideCount(currentIndex, totalSlides);

                    PcImageSlider.slideToLoop(PcProductSlider.realIndex);
                });

                const initialIndex = PcImageSlider.realIndex + 1;
                PcUpdateSlideCount(initialIndex, totalSlides);

                let resizeTimeout;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimeout);
                    resizeTimeout = setTimeout(() => {
                        PcImageSlider.update();
                        PcProductSlider.update();
                    }, 250);
                });
            }


            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', loadSwiper(() => PcInitFeaturedCollection13()));
            } else {
                loadSwiper(() => PcInitFeaturedCollection13());
            }
