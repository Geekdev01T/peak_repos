      .featured-product-count-pc-{{section.id}} * {
          font-size: {{ section.settings.count_size }}px;
      }

      .featured-btn-prev-pc-{{section.id}},
      .featured-btn-next-pc-{{section.id}} {
          width: {{section.settings.nav_btn_w}}px;
