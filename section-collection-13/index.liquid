      color: {{ section.settings.desc_color }};
      line-height: 150%;
      text-transform: unset;
      word-break: break-word;
  }

  .featured-product-button-pc-{{section.id}} {
      margin-top: 12px;
      padding: 12px 16px;
      border: {{ section.settings.btn_border_w }}px solid {{ section.settings.btn_border_color }};
      border-radius: {{ section.settings.btn_radius }}px;
      background: {{ section.settings.btn_bg }};
      cursor: pointer;
      display: block;
      text-decoration: none;
