      opacity: 1 !important;
      transition: all 0.25s ease 0s;
  }

  .featured-product-slider-wrap-pc-{{section.id}} {
      display: grid;
      grid-area: product;
      aspect-ratio: auto;
  }

  .featured-product-slider-pc-{{section.id}} {
      min-width: 0px !important;
      width: 100% !important;
      position: relative !important;
