  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Oswald', sans-serif;
  }


  .pk-mega-deal-section {
      position: relative;
      width: {{section_width}}%;
      height: 90vh;
      margin: 0 auto;
      border-radius:{{section_radius}}px;
      margin-top: {{section_mt}}px;
      margin-bottom: {{section_mb}}px;
      {% if section_with_border == true %}border: {{section_border_width}}px solid {{section_border_color}};{% endif %}
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      background: {{section_backg}};
      color: white;
      overflow: hidden;
  }

  .pk-mega-deal-section .pk-content-wrapper {
      padding: 5rem 4rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-label {
      font-size: {{ heading_size }}px;
      text-transform: uppercase;
      color: {{ heading_color }};
      margin-top: {{ heading_mt }}px;
      margin-bottom: {{ heading_mb }}px;
      font-weight: {{ heading_weight }};
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-title {
      font-size: {{ sub_heading_size }}px;
      font-weight: {{ sub_heading_weight }};
      text-transform: uppercase;
      line-height: 1.1;
      margin-top: {{ sub_heading_mt }}px;
      margin-bottom: {{ sub_heading_mb }}px;
      color:{{ sub_heading_color }};
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-description {
      font-family: 'Rubik', sans-serif;
      font-size: {{ text_desc_size}}px;
      color: {{ text_desc_color}};
      margin-top: {{ text_desc_mt }}px;
      margin-bottom: {{ text_desc_mb }}px;
      font-weight: {{ text_desc_weight }};
  }


  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button {
      display: flex;
      justify-content: center;
      align-items: center;
      align-items: center;
      padding: 17px {{btn_pl}}px 17px {{btn_pr}}px;
      margin: 0 auto;
      background-color: {{btn_backg}};
      color: {{btn_text_color}};
      text-decoration: none;
      text-transform: uppercase;
      font-weight: {{btn_text_weight}};
      letter-spacing: 1px;
      font-size: {{btn_text_size}}px;
      border: {{btn_border_width}}px {{btn_border_type}} {{btn_border_color}};
      border-radius:{{btn_radius}}px;
      transition: all 0.3s ease;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button:hover {
      background-color: {{section.settings.btn_backg_hover}};
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button .pk-arrow {
      margin-left: 5px;
      transform: rotate(-45deg);
      transition: transform 0.3s ease;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button:hover .pk-arrow {
      transform: rotate(0deg);
  }


  .pk-mega-deal-section .pk-scrolling-text-wrapper {
      position: relative;
      width: {{scrolling_width}}px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      background: {{section_backg}};
      border-left: {{ scrolling_border_width }}px {{ scrolling_border_type}} {{ scrolling_border_color}};
      padding: 1em 2em;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text {
      width: 90%;
      right: 1em;
      position: absolute;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      white-space: nowrap;
      animation: scrollVertaical 20s linear infinite;
      border-right: {{ scrolling_border_width }}px {{ scrolling_border_type}} {{ scrolling_border_color}};
      text-transform: uppercase;
      font-weight: 600;
      font-size: 1rem;
      color: white;
      padding: 0em 1em;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-textScroll {
      display: inline-block;
      padding: 2rem 0;
      font-size: 48px;
      rotate: 180deg;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-squareScroll {
      font-size: 12px;
  }

  .pk-mega-deal-section .pk-image-wrapper {
      position: relative;
      height: 100vh;
      overflow: hidden;
  }

  .pk-mega-deal-section .pk-mega-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  @keyframes scrollVertical {
      0% {
          transform: translateY(-10%);
      }

      100% {
          transform: translateY(10%);
      }
  }

  @keyframes scrollTextHorizontal {
      0% {
          transform: translateX(-100%);
      }

      100% {
          transform: translateX(100%);
      }
  }


