<style>
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Oswald', sans-serif;
  }


  .pk-mega-deal-section {
      position: relative;
      width: {{section.settings.section_width}}%;
      height: {{section.settings.section_height}}vh;
      margin-top: {{section.settings.section_mt}}px;
      margin-bottom: {{section.settings.section_mb}}px;
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      background: #1a1a1a;
      color: white;
      overflow: hidden;
  }

  .pk-mega-deal-section .pk-content-wrapper {
      padding: 8rem 5rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: center;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-label {
      font-size: {{ section.settings.heading_size }}px;
      text-transform: uppercase;
      color: {{ section.settings.heading_color }};
      margin-top: {{ section.settings.heading_mt }}px;
      margin-bottom: {{ section.settings.heading_mb }}px;
      font-weight: {{ section.settings.heading_weight }};
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-title {
      font-size: {{ section.settings.sub_heading_size }}px;
      font-weight: {{ section.settings.sub_heading_weight }};
      text-transform: uppercase;
      line-height: 1.1;
      margin-top: {{ section.settings.sub_heading_mt }}px;
      margin-bottom: {{ section.settings.sub_heading_mb }}px;
      color:{{ section.settings.sub_heading_color }};
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-mega-description {
      font-family: 'Rubik', sans-serif;
      font-size: {{ section.settings.text_desc_size}}px;
      color: {{ section.settings.text_desc_color}};
      margin-top: {{ section.settings.text_desc_mt }}px;
      margin-bottom: {{ section.settings.text_desc_mb }}px;
      font-weight: {{ section.settings.text_desc_weight }};
  }


  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button {
      display: flex;
      justify-content: center;
      align-items: center;
      align-items: center;
      padding: 17px {{section.settings.btn_pl}}px 17px {{section.settings.btn_pr}}px;
      margin: 0 auto;
      background-color: {{section.settings.btn_backg}};
      color: {{section.settings.btn_text_color}};
      text-decoration: none;
      text-transform: uppercase;
      font-weight: {{section.settings.btn_text_weight}};
      letter-spacing: 1px;
      font-size: {{section.settings.btn_text_size}}px;
      border: {{section.settings.btn_border_width}}px {{section.settings.btn_border_type}} {{section.settings.btn_border_color}};
      transition: all 0.3s ease;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button:hover {
      background-color: #000;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button .pk-arrow {
      margin-left: 5px;
      transform: rotate(-45deg);
      transition: transform 0.3s ease;
  }

  .pk-mega-deal-section .pk-content-wrapper .pk-shop-button:hover .pk-arrow {
      transform: rotate(0deg);
  }


  .pk-mega-deal-section .pk-scrolling-text-wrapper {
      position: relative;
      width: {{section.settings.scrolling_width}}px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #1a1a1a;
      border-left: {{ section.settings.scrolling_border_width }}px {{section.settings.scrolling_border_type}} {{section.settings.scrolling_border_color}};
      padding: 1em 2em;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text {
      width: 90%;
      right: 1em;
      position: absolute;
      writing-mode: vertical-rl;
      text-orientation: mixed;
      white-space: nowrap;
      animation: scrollVertical 20s linear infinite;
      border-right: {{ section.settings.scrolling_border_width }}px {{section.settings.scrolling_border_type}} {{section.settings.scrolling_border_color}};
      text-transform: uppercase;
      font-weight: 600;
      font-size: 1rem;
      color: white;
      padding: 0em 1em;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-textScroll {
      display: inline-block;
      padding: 2rem 0;
      font-size: 48px;
      rotate: 180deg;
  }

  .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-squareScroll {
      font-size: 12px;
  }

  .pk-mega-deal-section .pk-image-wrapper {
      position: relative;
      height: 100vh;
      overflow: hidden;
  }

  .pk-mega-deal-section .pk-mega-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
  }

  @keyframes scrollVertical {
      0% {
          transform: translateY(-10%);
      }

      100% {
          transform: translateY(10%);
      }
  }

  @keyframes scrollTextHorizontal {
      0% {
          transform: translateX(-100%);
      }

      100% {
          transform: translateX(100%);
      }
  }


  @media (max-width: 990px) {
      .pk-mega-deal-section {
          width: 100%;
          height: 750px;
          display: grid;
          grid-template-columns: repeat(1, 1fr);
          margin-bottom: 1em;
      }

      .pk-mega-deal-section .pk-scrolling-text-wrapper {
          overflow: hidden;
          width: 100%;
          padding: 10px 0;
          position: relative;
          padding-top: 2.4em;
          padding-bottom: 1.5em;
          border-top: {{ section.settings.scrolling_border_width }}px {{section.settings.scrolling_border_type}} {{section.settings.scrolling_border_color}};
      }

      .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text {
          width: 100%;
          white-space: nowrap;
          display: flex;
          justify-content: center;
          align-items: center;
          border: none;
          writing-mode: horizontal-tb;
          rotate: 180deg;
          animation: scrollTextHorizontal 25s linear infinite;
      }

      .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-textScroll {
          display: inline-block;
          padding: 2rem 0;
          font-size: 14px;
          font-weight: 500;
          margin-left: .8em;
      }

      .pk-mega-deal-section .pk-scrolling-text-wrapper .pk-scrolling-text .pk-squareScroll {
          font-size: 10px;
          margin-left: .8em;
      }

      .pk-mega-deal-section .pk-image-wrapper {
          position: relative;
          height: 100%;
      }
  }

  @media (max-width: 700px) {
      .pk-mega-deal-section .pk-content-wrapper {
          padding: 6rem 4rem 6rem 4rem;
      }

      .pk-mega-deal-section .pk-content-wrapper .pk-mega-title {
          font-size: 30px;
      }
  }
</style>
